@{
    ViewData["Title"] = "Register";
}
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- breadcrumb-->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li aria-current="page" class="breadcrumb-item active">New account / Sign in</li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-6">
                <div class="box">
                    <h1>New account</h1>
                    <p class="lead">Not our registered customer yet?</p>
                    <hr>
                    @if (ViewData.ModelState["register"] != null)
                    {
                        <div class="text-danger">@ViewData.ModelState["register"].Errors[0].ErrorMessage</div>
                    }
                    <form asp-controller="Register" asp-action="Register" method="post">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="first_name">First Name</label>
                                    <input id="first_name" name="first_name" type="text" class="form-control">
                                    @if (ViewData.ModelState["first_name"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["first_name"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                               
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="last_name">Last Name</label>
                                    <input id="last_name" name="last_name" type="text" class="form-control">
                                    @if (ViewData.ModelState["last_name"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["last_name"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="city">City</label>
                                    <input id="city" name="city" type="text" class="form-control">
                                    @if (ViewData.ModelState["city"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["city"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input id="address" name="address" type="text" class="form-control">
                                    @if (ViewData.ModelState["address"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["address"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="country">Country</label>
                                    <input id="country" name="country" type="text" class="form-control">
                                    @if (ViewData.ModelState["country"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["country"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="code">Postal Code</label>
                                    <input id="code" name="code" type="text" class="form-control">
                                    @if (ViewData.ModelState["code"] != null)
                                    {
                                        <div class="text-danger">@ViewData.ModelState["code"].Errors[0].ErrorMessage</div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone_no">Phone Number</label>
                            <input id="phone_no" name="phone_no" type="text" class="form-control">
                            @if (ViewData.ModelState["phone_no"] != null)
                            {
                                <div class="text-danger">@ViewData.ModelState["phone_no"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="email" name="email" type="text" class="form-control">
                            @if (ViewData.ModelState["email"] != null)
                            {
                                <div class="text-danger">@ViewData.ModelState["email"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input id="password" name="password" type="password" class="form-control">
                            @if (ViewData.ModelState["password"] != null)
                            {
                                <div class="text-danger">@ViewData.ModelState["password"].Errors[0].ErrorMessage</div>
                            }
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i>
                                Register</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="box">
                    <h1>Login</h1>
                    <p class="lead">Already our customer?</p>
                    <hr>
                    <form action="customer-orders.html" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="email" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input id="password" type="password" class="form-control">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>